{
  "name": "@substrate-system/baowser",
  "version": "0.0.0",
  "private": true,
  "description": "Streaming hash-based verification in the browser",
  "type": "module",
  "main": "dist/index.js",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "files": [
    "./dist/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": [
        "./dist/*.js",
        "./dist/*"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/*"
      ]
    }
  },
  "scripts": {
    "lint": "eslint \"./**/*.{ts,js}\"",
    "test:browser": "esbuild --format=esm \"--external:node:*\" --bundle ./test/index.ts | tapout",
    "test:node": "esbuild ./test/index.ts --format=esm --platform=node --bundle | node --input-type module",
    "test:serverside": "esbuild ./test/node.ts --platform=node --bundle | node",
    "test": "npm run test:node && npm run test:browser",
    "build-cjs": "esbuild src/*.ts --format=cjs --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --out-extension:.js=.cjs --sourcemap",
    "build-cjs:min": "esbuild src/index.ts src/util.ts --format=cjs --minify --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --out-extension:.js=.min.cjs --sourcemap",
    "build-esm": "esbuild src/*.ts --format=esm --metafile=dist/meta.json --keep-names --tsconfig=tsconfig.build.json --outdir=./dist --sourcemap && tsc --emitDeclarationOnly --project tsconfig.build.json --outDir dist",
    "build-esm:min": "esbuild ./src/index.ts ./src/util.ts --format=esm --keep-names --bundle --tsconfig=tsconfig.build.json --minify --out-extension:.js=.min.js --outdir=./dist --sourcemap",
    "build-example": "mkdir -p ./public && rm -rf ./public/* && VITE_DEBUG_MODE=staging vite --mode staging --base=\"/repo-name\" build",
    "build-docs": "typedoc ./src/index.ts",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-cjs && npm run build-esm && npm run build-esm:min && npm run build-cjs:min",
    "start": "vite",
    "toc": "markdown-toc --maxdepth 4 -i README.md",
    "preversion": "npm run lint",
    "version": "npm run toc && auto-changelog -p --template keepachangelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md README.md",
    "postversion": "git push --follow-tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@nichoth/hash-wasm": "^4.13.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@preact/signals": "^2.5.0",
    "@substrate-system/a11y": "^0.0.15",
    "@substrate-system/css-normalize": "^0.0.13",
    "@substrate-system/debug": "^0.9.32",
    "@substrate-system/human-bytes": "^0.0.6",
    "@substrate-system/tapout": "^0.0.28",
    "@substrate-system/tapzero": "^0.10.16",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.25.8",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "htm": "^3.1.1",
    "markdown-toc": "^1.2.0",
    "postcss-nesting": "^13.0.2",
    "preact": "^10.27.0",
    "route-event": "^7.4.0",
    "tap-spec": "^5.0.0",
    "typedoc": "^0.28.9",
    "typescript": "^5.9.2",
    "uint8arrays": "^5.1.0",
    "vite": "^7.0.6"
  },
  "keywords": [
    "stream",
    "hash",
    "blake3",
    "bao"
  ],
  "homepage": "https://github.com/substrate-system/baowser",
  "bugs": {
    "url": "https://github.com/substrate-system/baowser/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/substrate-system/baowser.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "nichoth <nichoth@nichoth.com> (https://nichoth.com)"
}
